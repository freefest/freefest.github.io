%header.p-3.bg-dark.text-white
  .container
    .d-flex.align-items-center.justify-content-between
      %a.d-flex.align-items-center.mb-2.mb-lg-0.text-white.text-decoration-none{href: '#'}
        %span.fs-4 #{data.general_details.title.sub('Total', '').strip} #{data.general_details.annum}

      %nav.navbar.navbar-expand-lg.navbar-dark
        .container-fluid
          %button.navbar-toggler{"type" => "button", "data-bs-toggle" => "collapse", "data-bs-target" => "#navbarNav", "aria-controls" => "navbarNav", "aria-expanded" => "false", "aria-label" => "Toggle navigation"}
            %span.navbar-toggler-icon

        .collapse.navbar-collapse#navbarNav
          %ul.navbar-nav.ms-auto.mb-2.mb-lg-0
            %li.nav-item
              = link_to t('menu.home'), 'index.html#home', class: 'nav-link px-2 text-white'
            %li.nav-item
              = link_to t('menu.venue'), 'index.html#venue', class: 'nav-link px-2 text-white'
            %li.nav-item
              = link_to t('menu.schedule'), 'index.html#schedule', class: 'nav-link px-2 text-white'
            %li.nav-item
              = link_to t('menu.contact'), 'index.html#contact', class: 'nav-link px-2 text-white'
            / %li.nav-item
            /   = link_to t('menu.memories'), 'memories/index.html', class: 'nav-link px-2 text-white'

            %li.nav-item.dropdown
              %a.nav-link.dropdown-toggle{"aria-expanded" => "false", "data-bs-toggle" => "dropdown", href: "#"} Language
              %ul.dropdown-menu
                %li
                  = link_to "English", url_for('index.html', locale: :en), class: 'dropdown-item'
                %li
                  = link_to "Magyar", url_for('index.html', locale: :hu), class: 'dropdown-item'
